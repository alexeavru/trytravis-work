{
    "variables": 
        {
            "project_id": "",
            "machine_type": "f1-micro",
            "image_description": "",
            "disk_size": "",
            "disk_type": "",
            "network": "",
            "tags": ""
        },
    "builders": [
        {
            "type": "googlecompute",
            "project_id": "{{user `project_id`}}",
            "image_name": "reddit-full-{{timestamp}}",
            "image_family": "reddit-full",
            "source_image_family": "reddit-base",
            "zone": "europe-west1-b",
            "ssh_username": "appuser",
            "machine_type": "f1-micro",
            "image_description": "{{user `image_description`}}",
            "disk_size": "{{user `disk_size`}}",
            "disk_type": "{{user `disk_type`}}",
            "network": "{{user `network`}}",
            "tags": "{{user `tags`}}"  	
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "packer/files/install.sh",
            "execute_command": "sudo {{.Path}}"
        },
        {
            "type": "file",
            "source": "packer/files/puma-server.service",
            "destination": "/tmp/puma-server.service"
        },
        {
            "type": "shell",
            "inline": "sudo mv /tmp/puma-server.service /etc/systemd/system/puma-server.service"
        },
        {
            "type": "shell",
            "inline": ["sudo systemctl daemon-reload",
                       "sudo systemctl enable puma-server.service"]
        }
    ]
}

